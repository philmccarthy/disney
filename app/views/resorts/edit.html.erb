<%= form_tag("/resorts/#{@resort.id}", method: :patch) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @resort.name %>
  <%= label_tag :amount_of_rooms %>
  <%= text_field_tag :amount_of_rooms, @resort.amount_of_rooms %>
  <%= label_tag :vacancy %>
  <%= select_tag :vacancy, options_for_select([true, false], @resort.vacancy) %>

  <%= submit_tag 'Edit Resort' %>
<% end %>

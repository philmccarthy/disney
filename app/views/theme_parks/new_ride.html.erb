<%= form_tag "/themeparks/#{@theme_park.id}/rides" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :max_occupants %>
  <%= text_field_tag :max_occupants %>
  <%= label_tag :operational %>
  <%= select_tag :operational, options_for_select([true, false]) %>

  <%= submit_tag 'Create Ride' %>
<% end %>
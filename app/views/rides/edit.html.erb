<%= form_tag("/rides/#{@ride.id}", method: :patch) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @ride.name %>
  <%= label_tag :max_occupants %>
  <%= text_field_tag :max_occupants, @ride.max_occupants %>
  <%= label_tag :operational %>
  <%= select_tag :operational, options_for_select([true, false], @ride.operational) %>

  <%= submit_tag 'Edit Ride' %>
<% end %>
